<odoo>
  <record id="wizard_dj" model="ir.ui.view">
    <field name="name">Make songs</field>
    <field name="model">dj</field>
    <field name="arch" type="xml">
      <form string="Make songs">
        <header>
          <button name="play" string="Play" type="object" class="btn-primary"/>
        </header>
        <group>
          <field name="name"/>
        </group>
        <field name="playlist">
          <tree>
            <field name="model_id"/>
            <field name="field_list"/>
          </tree>
        </field>
        <div states="">
          <p>Here is your zip file: <field name="compact_disk" readonly="1" filename="album_title"/></p>
        </div>
      </form>
    </field>
  </record>

  <record id="action_wizard_dj" model="ir.actions.act_window">
    <field name="name">Make songs</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">dj</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem string="Make songs" id="menu_dj" parent="base.menu_administration"/>
  <menuitem action="action_wizard_dj" id="menu_wizard_dj" parent="menu_dj"/>
</odoo>
