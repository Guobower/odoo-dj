<odoo>
  <record id="dj_compilation_form" model="ir.ui.view">
    <field name="name">DJ compilation form</field>
    <field name="model">dj.compilation</field>
    <field name="arch" type="xml">
      <form string="Make songs">
        <sheet>
          <notebook>
            <page name="main" string="Main">
              <group>
                <field name="genre"/>
                <field name="name"/>
                <field name="data_mode"/>
              </group>
              <field name="sample_ids" context="{'model_tech_name_only': 1}">
                <tree>
                  <field name="sequence" widget="handle" />
                  <field name="model_id" />
                  <field name="model_fields_ids" context="{'model_tech_name_only': 1}" />
                </tree>
              </field>
              <footer>
                <button name="burn" string="Burn" type="object" class="btn-primary"/>
                <div name="download">
                  <field name="album_title" invisible="1" />
                  <p>Here is your zip file containting songs and csv files: <field name="compact_disc" readonly="1" filename="album_title"/></p>
                </div>
              </footer>
            </page>
            <page name="advanced" string="Advanced">
              <group>
                <field name="template_path"/>
                <field name="disc_path"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="dj_compilation_tree" model="ir.ui.view">
    <field name="name">DJ compilation tree</field>
    <field name="model">dj.compilation</field>
    <field name="arch" type="xml">
      <tree>
        <field name="genre"/>
        <field name="name"/>
        <field name="data_mode"/>
      </tree>
    </field>
  </record>

  <record id="dj_compilation_search" model="ir.ui.view">
    <field name="name">DJ compilation search</field>
    <field name="model">dj.compilation</field>
    <field name="arch" type="xml">
      <search string="Compilation Search">
        <field name="genre"/>
        <field name="name"/>
        <field name="data_mode"/>
        <group expand="0" string="Group By">
          <filter string="Genre" name="genre" context="{'group_by':'genre'}"/>
          <filter string="Data mode" name="data_mode" context="{'group_by':'data_mode'}"/>
        </group>
      </search>
    </field>
  </record>

  <record id="action_dj_compilation" model="ir.actions.act_window">
    <field name="name">Compilations</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">dj.compilation</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem
    parent="base.menu_administration"
    id="menu_dj_console"
    name="DJ Console"
    />
  <menuitem
    parent="menu_dj_console"
    id="menu_dj_compilation"
    name="Compilations"
    action="action_dj_compilation"
    />
</odoo>
